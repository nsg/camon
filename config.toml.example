# Camon Configuration

[buffer]
# Hot buffer duration in seconds (default: 600 = 10 minutes)
hot_duration_secs = 600

[http]
# HTTP server port for web UI (default: 8080)
port = 8080

[analytics]
# Enable MOG2 motion detection (default: false)
# Motion threshold is automatically tuned using percentile-based adaptive thresholding
enabled = true
# Frame sample rate for analysis (default: 5)
sample_fps = 5

# Object detection using YOLO26 (requires motion detection enabled)
[analytics.object_detection]
# Enable YOLO26 object detection on motion segments (default: false)
enabled = true
# Path or URL to YOLO26 ONNX model file
# Remote: "https://huggingface.co/onnx-community/yolo26n-ONNX/resolve/main/onnx/model.onnx"
# Local: "models/yolo26n.onnx"
model_path = "https://huggingface.co/onnx-community/yolo26n-ONNX/resolve/main/onnx/model.onnx"
# Minimum confidence threshold (default: 0.5)
confidence_threshold = 0.5
# Object classes to detect (default: person, car, truck, dog, cat)
classes = ["person", "car", "truck", "dog", "cat"]

# Camera configuration
# Each camera needs an id and url

[[cameras]]
id = "front-door"
url = "rtsp://admin:password@192.168.1.100:554/stream1"

